<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TapeHubDemo.View.UsersListPage"
             xmlns:vm="clr-namespace:TapeHubDemo.ViewModel"
             xmlns:model="clr-namespace:TapeHubDemo.Model"
             x:DataType="vm:UsersListPageViewModel"
             Title="Users List">

    <StackLayout Padding="20" VerticalOptions="Center">
        <Label Text="Registered Users" FontSize="Large" />
        <ListView ItemsSource="{Binding Users}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:User">
                    <TextCell Text="{Binding Username}" Detail="{Binding Role}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
