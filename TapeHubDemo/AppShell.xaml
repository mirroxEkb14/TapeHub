<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TapeHubDemo.AppShell"
    xmlns:main="clr-namespace:TapeHubDemo"
    xmlns:view="clr-namespace:TapeHubDemo.View"
    Shell.BackgroundColor="#8B5E3C"
    Shell.TitleColor="#F5F5DC">

    <ShellContent Route="MainPage" ContentTemplate="{DataTemplate main:MainPage}" />
    <ShellContent Route="LoginPage" ContentTemplate="{DataTemplate view:LoginPage}" />
    <ShellContent Route="RegisterPage" ContentTemplate="{DataTemplate view:RegisterPage}" />
    <ShellContent Route="ShopBranchesPage" ContentTemplate="{DataTemplate view:ShopBranchesPage}" />
    <ShellContent Route="ProductsPage" ContentTemplate="{DataTemplate view:ProductsPage}" />
</Shell>
